#include<iostream>
using namespace std;
int main()
{
	cout<<"***********************************"<<endl;
	cout<<"*   欢迎使用学生成绩管理系统1.1   *"<<endl; 
	cout<<"*   朱少慧 计算机1703班 2017.10.17*"<<endl;
	cout<<"*   1,输入4个同学的代号和成绩     *"<<endl;
	cout<<"*   2,输出4个同学的成绩列表       *"<<endl; 
	cout<<"*   3,求4人的平均分               *"<<endl;
	cout<<"*   4,求4人的总分                 *"<<endl;      
	cout<<"*   5,统计及格率                  *"<<endl;
	cout<<"*   6,退出                        *"<<endl;
	cout<<"*    请输入(1-5)选择              *"<<endl;
	cout<<"*                                 *"<<endl;
	cout<<"***********************************"<<endl;
	int x,a,b,c,d,C,D,n=0;
	double m,S;
	if(a>=60)
	n++;
	if(b>=60)
	n++;
	if(c>=60)
	n++;
	if(d>=60)
	n++;
	m==n/400;
	cin>>x;
	switch(x)
	{
	case(1):cin>>a>>b>>c>>d;break;
	case(2):cin>>a>>b>>c>>d;cout<<a<<","<<b<<","<<c<<","<<d;break;
	case(3):{cin>>a>>b>>c>>d;S==(a+b+c+d)/4;cout<<"4位同学的平均成绩为："<<S;break;}
	case(4):{cin>>a>>b>>c>>d;C==(a+b+c+d);cout<<"4位同学的总分为："<<C;break;}
	case(5):cout<<m;break;
	case(6):return 0;break;
		}
	return 0;
}
